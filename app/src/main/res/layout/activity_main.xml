<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.y520.ferdinan_1202150010_modul2.MainActivity">

    <Button
        android:id="@+id/btn_Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTakeAway"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickOrder"
        android:text="PESAN SEKARANG"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="418dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="312dp"
        android:layout_height="162dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logosteak"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="64dp" />

    <RadioButton
        android:id="@+id/buttonDineIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTakeAway"
        android:layout_alignStart="@+id/buttonTakeAway"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginTop="20dp"
        android:text="Dine In" />

    <RadioButton
        android:id="@+id/buttonTakeAway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDineIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="TakeAway" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Pilih Menu :" />

</RelativeLayout>